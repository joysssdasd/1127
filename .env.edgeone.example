# EdgeOne 部署环境变量
EDGEONE_DEPLOY=true
NODE_ENV=production

# EdgeOne 站点配置
EDGEONE_SITE_NAME=c2c-marketplace
EDGEONE_REGION=ap-guangzhou
EDGEONE_DOMAIN=your-domain.com

# API 配置 (如果使用独立的后端服务)
API_ENDPOINT=https://api.your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api

# 数据库配置 (如果使用腾讯云数据库)
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=your-db-host.tencentcloudapi.com
DB_PORT=5432
DB_NAME=c2c_marketplace
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT 配置
JWT_SECRET=your_32_character_minimum_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# 应用配置
NEXT_PUBLIC_DEPLOY_TARGET=edgeone
NEXT_PUBLIC_APP_NAME=C2C信息集市
NEXT_PUBLIC_APP_VERSION=1.0.0

# 短信服务配置 (腾讯云短信)
TENCENT_SMS_SECRET_ID=your_secret_id
TENCENT_SMS_SECRET_KEY=your_secret_key
TENCENT_SMS_APP_ID=your_app_id
TENCENT_SMS_SIGN_NAME=your_sign_name

# 缓存配置 (可选)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your_redis_password

# 监控配置 (可选)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
BAIDU_ANALYTICS_ID=your_baidu_analytics_id

# 管理员配置
ADMIN_PHONES=13011319329,13001220766

# CDN 配置
CDN_DOMAIN=https://your-cdn-domain.com
STATIC_URL=https://your-domain.com

# 安全配置
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600

# 文件上传配置 (如果支持)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp